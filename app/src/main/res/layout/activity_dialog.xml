<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_message"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="消息对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_checked"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="checkbox对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_count_down"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="倒计时对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_choose"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="选择对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="输入对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

    <com.cys.common.widget.button.TextButton
        android:id="@+id/button_color_pick"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="颜色选择对话框"
        android:textColor="@color/blue_90"
        android:textSize="16sp"
        app:normalColor="@color/blue_5"
        app:pressedColor="@color/blue_20"
        app:radius="8dp" />

</LinearLayout>