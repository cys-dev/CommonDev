<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Toolbar.Base" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <declare-styleable name="PtrPullRefreshLayout">
        <attr name="ptrRingColor" format="color" />
        <attr name="ptrRingBgColor" format="color" />
        <attr name="ptrTextColor" format="color" />
        <attr name="ptrPinContent" format="boolean" />
        <attr name="ptrAnimOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AnimDownLoadView">
        <attr name="mcDownLoadText" format="string" />
    </declare-styleable>

    <declare-styleable name="LoadingTextView">
        <attr name="mcLoadingText" format="string" />
        <attr name="mcErrorText" format="string" />
        <attr name="mcDotRadius" format="integer" />
        <attr name="mcLoadingTextColor" format="integer" />
        <attr name="mcDotColor" format="integer" />
        <attr name="mcDotNum" format="integer" />
        <attr name="Widget.LoadingTextStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="TextButton">
        <attr name="radius" format="dimension" />
        <attr name="normalColor" format="color" />
        <attr name="pressedColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ColorPlaceView">
        <attr name="fillColor" format="color" />
        <attr name="selectorColor" format="color" />
        <attr name="selectorWidth" format="dimension" />
    </declare-styleable>

    <style name="ThemeOverlay.PrimaryPalette.Red" parent="">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_30</item>
    </style>

    <style name="ThemeOverlay.PrimaryPalette.Green" parent="">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_30</item>
    </style>

    <style name="ThemeOverlay.PrimaryPalette.Blue" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_30</item>
    </style>

    <style name="ThemeOverlay.PrimaryPalette.Gray" parent="">
        <item name="colorPrimary">@color/gray_60</item>
        <item name="colorPrimaryDark">@color/gray_10</item>
    </style>
</resources>